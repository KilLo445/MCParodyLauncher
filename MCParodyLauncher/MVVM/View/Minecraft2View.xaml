<UserControl x:Class="MCParodyLauncher.MVVM.View.Minecraft2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCParodyLauncher.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Name="MC2Logo" Source="/img/mc2.png" VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Margin="0,-300,0,0" MouseLeftButtonDown="MC2Logo_MouseLeftButtonDown"/>
        <Button Name="PlayMC2" Width="100" Height="40" Content="Original" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,300,150,0" Click="PlayMC2_Click" MouseRightButtonDown="PlayMC2_MouseRightButtonDown"/>
        <Button Name="PlayMC2R" Width="100" Height="40" Content="Remake" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="150,300,0,0" Click="PlayMC2R_Click" MouseRightButtonDown="PlayMC2R_MouseRightButtonDown"/>
        <ProgressBar Name="DLProgress" HorizontalAlignment="Center" Height="15" VerticalAlignment="Center" Width="638" Visibility="Hidden" Margin="0,305,0,0"/>
    </Grid>
</UserControl>
