<Window x:Class="MCParodyLauncher.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCParodyLauncher"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="Black"
        AllowsTransparency="False"
        MouseDown="Window_MouseDown"
        Title="About" Height="400" Width="600">
    <Grid>
        <Image Source="Images/bg/lake.png" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.4" Margin="0,0,0,0"/>

        <TextBlock Text="About" TextAlignment="Center" TextWrapping="Wrap" Width="500" Height="220" Foreground="White" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontFamily="/Fonts/Poppins/#Poppins"/>

        <TextBlock TextAlignment="Center" TextWrapping="Wrap" Width="500" Height="170" Foreground="White" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" FontFamily="/Fonts/Poppins/#Poppins">
            Minecraft Parody Launcher is a collection of games created by KilLo, roggzerz, and Tuxum.
            <LineBreak />
            <LineBreak />
            Features:<LineBreak />
            Auto-Updates (Games and Launcher)<LineBreak />
            Custom install locations<LineBreak />
            Open source<LineBreak />
        </TextBlock>

        <Image Source="Images/logo/decentgames120.png" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>

        <TextBlock Name="CloseButton" Text="X" MouseLeftButtonDown="CloseButton_MouseLeftButtonDown" Style="{StaticResource CloseButton}" FontSize="25" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="/Fonts/Poppins/#Poppins" Height="30" Margin="0,0,8,0" Grid.Column="1" Grid.RowSpan="2"/>
    </Grid>
</Window>
