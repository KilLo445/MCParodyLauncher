<Window x:Class="MCParodyLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCParodyLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        ContentRendered="Window_ContentRendered"
        Title="Minecraft 2-4 The Trilogy Definitive Edition Launcher" Height="576" Width="900">
    <Grid>
        <Image Name="BG" Source="img/bg/bg1.png" Stretch="UniformToFill" HorizontalAlignment="Center"/>
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="White" Margin="0, 0, 5, 0"/>
        <TextBlock Name="UpdateText" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="20" Foreground="White" Margin="0, 0, 5, 0"/>
        <Button Name="PlayMC2" Content="Minecraft 2" Click="PlayMC2_Click" Height="60" Width="200" MinWidth="150" FontSize="28" FontWeight="Bold" Margin="126,0,566,40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Visible" BorderBrush="{x:Null}">
            <Button.Foreground>
                <SolidColorBrush Color="White"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush ImageSource="img/button/buttonBGdirt.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button Name="PlayMC2_Disabled" Content="Minecraft 2" Click="PlayMC2_Disabled_Click" Height="60" Width="200" MinWidth="150" FontSize="28" FontWeight="Bold" Margin="126,0,566,40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Hidden" BorderBrush="{x:Null}" Cursor="No">
            <Button.Foreground>
                <SolidColorBrush Color="White"/>
            </Button.Foreground>
            <Button.Background>
                <ImageBrush ImageSource="img/button/buttonBGdirt-disabled.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="PlayMC3" Content="Minecraft 3" Click="PlayMC3_Click" MouseRightButtonDown="PlayMC3_MouseRightButtonDown" Height="60" Width="200" MinWidth="150" FontSize="28" FontWeight="Bold" Margin="346,0,346,40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Visible" BorderBrush="{x:Null}" Foreground="White">
            <Button.Background>
                <ImageBrush ImageSource="img/button/buttonBGdirt.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="PlayMC3_Disabled" Content="Minecraft 3" Click="PlayMC3_Disabled_Click" Height="60" Width="200" MinWidth="150" FontSize="28" FontWeight="Bold" Margin="346,0,346,40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Hidden" BorderBrush="{x:Null}" Foreground="White" Cursor="No">
            <Button.Background>
                <ImageBrush ImageSource="img/button/buttonBGdirt-disabled.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="PlayMC4" Content="Minecraft 4" Click="PlayMC4_Click" Height="60" Width="200" MinWidth="150" FontSize="28" FontWeight="Bold" Margin="566,0,126,40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Visible" BorderBrush="{x:Null}" Foreground="White" Cursor="No">
            <Button.Background>
                <ImageBrush ImageSource="img/button/buttonBGdirt-disabled.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="PlayMC4_Disabled" Content="Minecraft 4" Click="PlayMC4_Disabled_Click" Height="60" Width="200" MinWidth="150" FontSize="28" FontWeight="Bold" Margin="566,0,126,40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Hidden" BorderBrush="{x:Null}" Foreground="White" Cursor="No">
            <Button.Background>
                <ImageBrush ImageSource="img/button/buttonBGdirt-disabled.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <WebBrowser Name="Changelog" HorizontalAlignment="Center" Height="271" VerticalAlignment="Center" Width="638"/>
        <Image HorizontalAlignment="Center" Height="80" Margin="37,25,37,0" VerticalAlignment="Top" Width="818" Source="img/mcpl_logo.png"/>
        <ProgressBar Name="DLProgress" HorizontalAlignment="Center" Height="15" VerticalAlignment="Center" Width="638" Visibility="Hidden" Margin="0,305,0,0"/>
    </Grid>
</Window>
