<Window x:Class="MCParodyLauncher.LaunchingGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCParodyLauncher"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Black"
        AllowsTransparency="True"
        Title="GameName" Height="150" Width="400">
    <Grid>
        <Image Source="Images/bg/mountain.png" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.2"/>
        <TextBlock Name="LaunchText" Text="Launching {gameName}..." Foreground="White" FontSize="22" FontFamily="/Fonts/Roboto/#Roboto" FontWeight="Light" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0"/>
    </Grid>
</Window>
